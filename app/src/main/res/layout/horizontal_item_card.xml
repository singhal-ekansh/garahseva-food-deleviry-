<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="280dp"
    android:layout_margin="5dp"
    android:background="#fff"
    android:elevation="10dp"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/HorizontalCardDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_bg"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="10% \n off"
            android:textColor="#fff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/HorizontalCardImage"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#f8f8ff"
            android:src="@drawable/colgate250" />

        <TextView
            android:id="@+id/HorizontalCardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HorizontalCardImage"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="Colgate Max Fresh-    250gm"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/HorizontalCardOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HorizontalCardName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="MRP: Rs 110"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/HorizontalCardItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HorizontalCardOriginalPrice"
            android:layout_marginStart="10dp"
            android:text="Rs 100"
            android:textColor="#000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/HorizontalCardAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_btn"
            android:text="ADD"
            android:textColor="#fff"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/HorizontalCardCounterLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:visibility="gone">

            <Button
                android:id="@+id/horizontalDecrease"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/round_btn"
                android:text="-"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/horizontalItemCount"
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/horizontalIncrease"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/round_btn"
                android:text="+"
                android:textSize="22sp" />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>