<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#fff"
    android:padding="8dp">

    <TextView
        android:id="@+id/orderItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Colgate 250gm"
        android:textColor="#000"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@id/orderItemQty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderItemQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="x2"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/orderItemPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 45"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>